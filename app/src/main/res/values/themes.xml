<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TMass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>

        <!-- Secondary branding colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- General styling -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/grey_500</item>
        <item name="android:windowBackground">@color/background</item>

        <!-- Disable dark mode -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Rounded corner elements -->
        <item name="shapeAppearanceCornerSmall">@style/ShapeAppearance.TMass.Small</item>
        <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.TMass.Medium</item>
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.TMass.Large</item>
    </style>

    <!-- Define custom shapes -->
    <style name="ShapeAppearance.TMass.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.TMass.Medium" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.TMass.Large" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>